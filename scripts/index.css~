body {
    /*let font-size of all elements in body by 100% of the default
      this way, we can specify any other font in the body relative to this ie using the "em" units
      eg 1.5em = 150% of the body font-size. Its easier and much better to control fonts this way
    */
    font-size:100%;

    position:absolute;
    top:0; left:0;right:0;bottom:0;

    background-color:#1f1212;
/*    border:1px solid;
    border-color:#ff0000;
*/}

