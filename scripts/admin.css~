body {
    /*let font-size of all elements in body by 100% of the default
      this way, we can specify any other font in the body relative to this ie using the "em" units
      eg 1.5em = 150% of the body font-size. Its easier and much better to control fonts this way
    */
    font-size:100%;

    position:absolute;
    top:0px; left:0px;

    width:99%; height:100%;

    margin:auto;

    background-color:rgb(0,153,102);

/*    border:1px solid;
    border-color:#ff0000;
*/}

/*general input style*/
.round_corners {
    /*create rounded corners*/
    border:1px solid;
    border-radius:20px;
    text-indent:15px;
    
    /*create gradient bg*/
    background: #009494; /*just in case the browser daint support gradients*/
    background: linear-gradient(to right, #333333, #009494); /*attempt gradient bg*/
    color:#ffffff;
        
    font-size:1em;
}

